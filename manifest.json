{
    "manifest_version": 3,
    "name": "Nuum Theatre Mode",
    "version": "0.1",
    "description": "Добавляет кнопку для включения театрального режима на трансляции для сайта Nuum.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://nuum.ru/*"], 
    "content_scripts": [
      {
        "matches": ["https://nuum.ru/*"],
        "js": ["theatre-button.js"] 
      }
    ],
    "icons": {
      "48": "icon.png"
    }
}